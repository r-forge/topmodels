%% SLIDE ----------------------------------
\begin{frame}[fragile]
    \frametitle{Introduction}

    \textbf{Probabilistic predictions}
    \begin{itemize}
        \item Modelling full probabilistic distribution
        \item Allows to retrieve the expected value, probabilities, probability of exceedence, \dots
        \item Important in many fields (e.g., medicine, economics, meteorology, \dots)
    \end{itemize}

    \vspace{2em}
    \textbf{Objective}
    \begin{itemize}
        \item Increasing sharpness conditional on calibration (\emph{Gneiting et\,al. 2007a})
        \item Optimization: proper scoring rules (\emph{Gneiting et\,al. 2007b})
        \item Graphical assessment: goodness of fit and possible misspecifications
    \end{itemize}

    %%\vspace{1em}
    %%\begin{center}
    %%    $\BoldRightarrow$ \emph{R}\,package \code{topmodels}
    %%\end{center}
\end{frame}


%% SLIDE ----------------------------------
\begin{frame}[fragile]
    \frametitle{Case study}

    \textbf{Probabilistic precipitation forecasting:}\\
    Accurate and reliable precipitation forecasts of increasing importance for:
    \begin{itemize}
        \item agricultural applications
        \item risk assessment (droughts, floods, fire hazard, \dots)
        \item strategic water resource planning (water supply, hydropower, transport, \dots)
        \item road safety and maintenance during winter season
        \item tourism and many more \dots
    \end{itemize}

    \pause
    \vspace{1em}
    \begin{center}
        $\BoldRightarrow$ \textbf{Statistical weather prediction `detour'}
    \end{center}

\end{frame}


%% SLIDE ----------------------------------
\begin{frame}[fragile]
    \frametitle{Case study}

    \textbf{Weather forecasts}
    \begin{itemize}
        \item Typically based physically-based numerical weather prediction models.
        \item Multiple runs with modified conditions $\rightarrow$ ensemble forecasts
        \item Various sources of possible errors due to necessary simplifications.
    \end{itemize}

    \vspace{1em}
    \textbf{Statistical post-processing}
    \begin{itemize}
        \item Use historical observations and ensemble forecasts
        \item Estimate statistical models to correct for possible forecast
            errors in both, expectation and uncertainty
        \item Apply correction to latest ensemble forecast
    \end{itemize}

\end{frame}


%% SLIDE ----------------------------------
\begin{frame}[fragile]
    \frametitle{Motivation}

    \textbf{Data}
    \begin{itemize}
        \item Station Innsbruck Airport, Austria
        \item 13 years of daily records ($2000-2013$; $N = \Sexpr{nrow(RainIbk)}$)
        \pause
        \item Response: Observed 3\,day accumulated precipitation (\code{rain})
        \item Features: mean and standard deviation of $11$-member ensemble forecast
            ($5-8$\,days ahead; \code{ensmean}, \code{enssd})
    \end{itemize}

    \vspace{1em}
    \textbf{Goal}
    \begin{itemize}
        \item Estimate three different parametric regression models
        \item Assessing goodness of fit using graphical assessment methods
    \end{itemize}

\end{frame}


