\begin{frame}[fragile]
    \frametitle{Model assessment}

    \textbf{Using proper scoring rules} (\emph{Gneiting et\,al. 2007b})

<<model_rain, eval=TRUE, echo=FALSE, results=tex>>=
library("scoringRules")
# Mean CRPS
s_crps <- c(mean(crps(RainIbk$rain, family = "norm",
                 location = fitted(ols),
                 scale = sqrt(1 / length(residuals(ols)) * sum((residuals(ols) - mean(residuals(ols)))^2)))),
            mean(crps(RainIbk$rain, family = "cnorm",
                      location = predict(hcnorm, type = "location"),
                      scale    = predict(hcnorm, type = "scale"),
                      lower    = hcnorm$cens$left,
                      upper    = hcnorm$cens$right)),
            mean(crps(RainIbk$rain, family = "clogis",
                      location = predict(hclog, type = "location"),
                      scale    = predict(hclog, type = "scale"),
                      lower    = hclog$cens$left,
                      upper    = hclog$cens$right)))
# logScore
tmp <- list(ols = ols, hcnorm = hcnorm, hclog = hclog)
s_ls   <- sapply(tmp, function(x) -logLik(x) / nrow(RainIbk))

s_res <- matrix(c(s_crps, s_ls), byrow = TRUE, nrow = 2,
                dimnames = list(c("CRPS", "logScore"), names(tmp)))

library("xtable")
xtable(s_res, digits = 3)
@

    \pause
    \vspace{1em}
    \textbf{Graphical model assessment}
    \begin{itemize}
        \item Important complement to proper scoring rules
        \item Checking marginal and probabilistic calibration
        \item Allows to identify possible misspecifications
    \end{itemize}

\end{frame}


