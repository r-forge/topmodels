\vspace{-0.75em}

\textbf{Observation data:}
\begin{itemize}
\item Goals scored by the two teams in all 64 matches.
\end{itemize}

\bigskip
\pause

\textbf{Covariates:}
\begin{itemize}
\item Difference in estimated log-ability of the competing teams.
\end{itemize}

\bigskip
\pause

\textbf{Model assumption:} 
\begin{itemize}
\item Poisson distribution for each team/match ($i$) in the tournament:
\item[] $y_i \sim \, Pr\big(\lambda_i = \exp(\beta_0 + \beta_1 \cdot \text{logability}_i)\big)$
\end{itemize}

\end{frame}


