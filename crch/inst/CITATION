  institution  = "Faculty of Economics and Statistics, University of Innsbruck",
  url          = "http://EconPapers.repec.org/RePEc:inn:wpaper:2016-04",

  textVersion  =
  paste("Jakob W. Messner, Georg J. Mayr, Achim Zeileis (2016).",
        "Non-Homogeneous Boosting for Predictor Selection in Ensemble Post-Processing.",
        "Working Papers, Faculty of Economics and Statistics, University of Innsbruck.",
        "URL http://EconPapers.repec.org/RePEc:inn:wpaper:2016-04"),
	
  header       = "If you use crch.boost() please cite:"
)

